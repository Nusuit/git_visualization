{
  "name": "git-flow-visualizer",
  "version": "1.0.0",
  "description": "Local Git Flow Visualizer - Real-time commit graph visualization",
  "main": "dist/main/index.js",
  "author": "Git Flow Team",
  "license": "MIT",
  "scripts": {
    "dev": "concurrently -k \"npm run dev:vite\" \"npm run dev:electron\"",
    "dev:vite": "vite",
    "dev:electron": "wait-on -t 30000 tcp:5173 tcp:5174 && tsc -p tsconfig.main.json && tsc -p tsconfig.preload.json && cross-env NODE_ENV=development electron .",
    "build": "npm run build:main && npm run build:preload && npm run build:renderer && electron-builder",
    "build:main": "tsc -p tsconfig.main.json",
    "build:preload": "tsc -p tsconfig.preload.json",
    "build:renderer": "vite build",
    "postinstall": "electron-builder install-app-deps",
    "type-check": "tsc --noEmit"
  },
  "devDependencies": {
    "@types/express": "^5.0.5",
    "@types/node": "^20.10.5",
    "@types/react": "^18.2.45",
    "@types/react-dom": "^18.2.18",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.16",
    "concurrently": "^8.2.2",
    "cross-env": "^10.1.0",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "postcss": "^8.4.32",
    "tailwindcss": "^3.4.0",
    "typescript": "^5.3.3",
    "vite": "^5.0.8",
    "wait-on": "^7.2.0"
  },
  "dependencies": {
    "@gitgraph/js": "^1.3.4",
    "chokidar": "^3.5.3",
    "electron-store": "^8.1.0",
    "express": "^4.18.2",
    "framer-motion": "^10.16.16",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "simple-git": "^3.21.0",
    "socket.io": "^4.6.0",
    "socket.io-client": "^4.6.0"
  },
  "build": {
    "appId": "com.gitflow.visualizer",
    "productName": "Git Flow Visualizer",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "package.json"
    ],
    "win": {
      "target": [
        "nsis"
      ]
    },
    "mac": {
      "target": [
        "dmg"
      ]
    },
    "linux": {
      "target": [
        "AppImage"
      ]
    }
  }
}
